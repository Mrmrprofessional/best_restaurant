<html>
<head>
    <title>Epicuisine</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="text-center">
    <div id="wrapper">
        <div id="header">
            <a href="/"><h1>Epicuisine</h1></a>
            <div class="row">
                <form action="/search" method="get">
                    <input id="search" name="search" type="text" placeholder="Restaurant or cuisine">
                    <button class="btn-info" type="submit">Search</button>
                </form>
            </div>
        </div>
        <div id="body">
            <hr>
            <div>
                <h2>{{ cuisine.gettype }} Restaurants</h2>
            </div>
            {% if restaurants is not empty %}
                <ul class="list-inline list-unstyled">
                    {% for restaurant in restaurants %}
                        <li><a href="/restaurant/{{ restaurant.getId }}/edit">{{ restaurant.getname }}</a>&nbsp;&nbsp;&nbsp;||</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>
                    No restaurants have been added!
                </p>
            {% endif %}
        </div>
        <div id="footer">
            <div class="row">
                <form action='/restaurants' method='post'>
                    <input id="cuisine_id" name="cuisine_id" type="hidden" value="{{ cuisine.getId() }}">
                    <input id='name' name='name' type='text' placeholder="name">
                    <input id='address' name='address' type='text' placeholder="address">
                    <button type='submit' class="btn-success">Add Restaurant</button>
                </form>
                <hr>
                <form action="/cuisines/{{ cuisine.getId }}" method="post">
                  <input name="_method" type="hidden" value="patch">
                  <input id="type" name="type" type="text" placeholder="name">
                  <button class="btn-warning" type="submit">Update Cuisine</button>
                </form>
                <form action="/cuisines/{{ cuisine.getId }}" method="post">
                  <input name="_method" type="hidden" value="delete">
                  <button class="btn-danger" type="submit">Delete this cuisine</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
